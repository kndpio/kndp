{
  "app": {
    "root": "packages/kndp/backstage/packages/app",
    "version": 2,
    "role": "frontend",
    "targets": {
      "dev": {
        "executor": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["yarn dev"]
        }
      },

      "start": {
        "executor": "@nx:run-script",
        "options": {
          "script": ["backstage-cli package start"]
        }
      },
      "build": {
        "builder": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["backstage-cli package build"]
        }
      },
      "lint": {
        "builder": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["backstage-cli package lint"]
        }
      },
      "test": {
        "builder": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["backstage-cli package test"]
        }
      },
      "clean": {
        "builder": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["backstage-cli package clean"]
        }
      },
      "build-image": {
        "builder": "@nrwl/workspace:run-commands",
        "options": {
          "commands": ["docker build ../.. -f Dockerfile --tag backstage"]
        }
      }
    }
  }
}
