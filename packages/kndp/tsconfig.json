{
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist",
      "sourceMap": false,
      "noImplicitAny": true,
      // "module": "esnext",
      "target": "es6",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2017", "dom"],
      "resolveJsonModule": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./dist"]
  }
  